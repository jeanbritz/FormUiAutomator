<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Input Label"
        android:id="@+id/tv_input_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black"/>


    <RadioGroup
        android:id="@+id/radio_grp_boolean_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_input_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <RadioButton
            android:id="@+id/radio_btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true"

            android:layout_toEndOf="@+id/radio_grp_boolean_input"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"/>

        <RadioButton
            android:id="@+id/radio_btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:paddingRight="30dp"
            android:textColor="@android:color/black"
            android:layout_alignBottom="@+id/radio_grp_boolean_input"
            android:layout_alignRight="@+id/tv_input_label"
            android:layout_alignEnd="@+id/tv_input_label"/>
    </RadioGroup>


</RelativeLayout>